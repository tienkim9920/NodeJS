
extends ../layouts/common.pug

block content
    h1.text-center(style="padding: 3rem 0") Danh Sách Sản Phẩm

    if users
        form(action="/BuyProduct/search/" + users._id, method="GET", style="display: flex; justify-content: flex-end")
            input(type="text", name="q", class="form-control w-25")
            span &nbsp;
            button(type="submit", class="btn btn-primary") Tìm Kiếm

    .row
        each product in products
            .col-lg-3
                .card(style='width: 17rem; margin: 1rem 1rem')
                    img.card-img-top.text-center(src=product.img, style="height: 270px")
                    .card-body.text-center
                        h5.card-title(style="color: green")= product.name
                        p.card-text(style="font-size: 1.2rem; color: gray")=product.price + ".000đ"
                        a.btn.btn-success(href='/BuyProduct/' + product._id) Đặt Hàng
