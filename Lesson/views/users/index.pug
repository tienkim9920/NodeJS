extends ../layouts/common.pug

block content
    
    h1(style="padding-top: 3rem") Quản Lý Sản Phẩm

    form(action="/users/search", method="GET", class="d-flex" ,style="padding-bottom: 3rem; justify-content: flex-end;", enctype="multipart/form-data")
        label(for="search", style="padding: .5rem 1rem 0 0") Tìm Kiếm: 
        input(type="text", name="q", class="form-control w-25")
        button(class="btn btn-primary ml-2") Tìm Kiếm

    table(class="table")
        tr
            th Full Name
            th Phone
            th Email
            th Edit

        each user in users
            tr
                //- td
                //-     img(src="/" + user.avatar, style="width: 30px")
                td=user.fullname
                td=user.phone
                td=user.email
                td(class="d-flex")
                    a(href='/users/edit/' + user._id, class="btn btn-success") Update
                    span &nbsp;
                    form(action="/users/" + user._id, method="POST")
                        button(class="btn btn-danger") Delete

    a(href="users/create", class="btn btn-primary") Thêm Mới