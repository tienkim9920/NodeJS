doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css',
   integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')
  //- link(rel='stylesheet', href='/StyleSheet/style.css')
  title Login

.container
  h1.text-center(style="padding: 2rem 0") Đăng Nhập

  form(action="/auth/login", method="POST", class="Login-Left")

    if errors
      .form-group(class="d-flex", style="justify-content: center")
        .alert.alert-danger(style="width: 40%")= errors

    .form-group(class="d-flex", style="justify-content: center")
      label(for="email", style="padding: .4rem 2rem 0 0rem; margin-right: 1rem") Tài Khoản: 
      input(name="email" type="text", class="form-control", style="width: 30%", value=values ? values.email : "")
    
    .form-group(class="d-flex", style="justify-content: center")
      label(for="password", style="padding: .4rem 2rem 0 0rem; margin-right: 1rem") Mật Khẩu: 
      input(name="password" type="password", class="form-control", style="width: 30%", value=values ? values.password : "")
    
    .form-group(class="d-flex", style="justify-content: center; padding-top: 2rem")
      button(type="submit", class="btn btn-primary d-flex") Đăng Nhập
      